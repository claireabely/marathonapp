        <div class="wrapper">
            <header>
              <h1>Fitness Tracker</h1>
            </header>
            <div class="ui container exercise">
              <div class="ui raised card m-auto">
                <h2>Add Your Workout</h2>
                <form action="POST">
                  <div class="workout-type">
                    <label for="type">Workout Type:</label>
                    <select name="type" id="type">
                      <option disabled selected>Select Run Type</option>
                      <option value="resistance">Cross Train Flex</option>
                      <option value="cardio">Long Run</option>
                      <option value="regular">Regular Run</option>
                      <option value="ayf">As You Feel </option>
                      <option value="intervals">Intervals </option>
                    </select>
                  </div>
                  <div class="cardio-form d-none">
                    <div class="cardio-name">
                      <label for="cardio-name">Name:</label>
                      <input
                        type="text"
                        name="cardio-name"
                        id="cardio-name"
                        placeholder="Running"
                      />
                    </div>
                    <div class="distance">
                      <label for="distance">Distance (miles):</label>
                      <input
                        type="number"
                        name="distance"
                        id="distance"
                        placeholder="5"
                      />
                    </div>
                    <div class="duration">
                      <label for="duration">Pace Per Mile</label>
                      <input
                        type="number"
                        name="duration"
                        id="duration"
                        placeholder="10"
                      />
                    </div>
                  </div>
                  <div class="resistance-form d-none">
                    <div class="exercise">
                      <label for="name">Workout Name:</label>
                      <input
                        type="text"
                        name="name"
                        id="name"
                        placeholder="Strength Training"
                      />
                    </div>
                    <div class="weight">
                      <label for="weight">Weight (lbs):</label>
                      <input
                        type="number"
                        name="weight"
                        id="weight"
                        placeholder="200"
                      />
                    </div>
                    <div class="sets">
                      <label for="sets">Sets:</label>
                      <input type="number" name="sets" id="sets" placeholder="4" />
                    </div>
                    <div class="reps">
                      <label for="reps">Reps:</label>
                      <input type="number" name="reps" id="reps" placeholder="10" />
                    </div>
                    <div class="resistance-duration">
                      <label for="resistance-duration">Duration (minutes):</label>
                      <input
                        type="number"
                        name="resistance-duration"
                        id="resistance-duration"
                        placeholder="10"
                      />
                    </div>
                  </div>
                  <div class="buttons">
                    <button id="complete" disabled class="huge ui black button complete">
                      Complete
                    </button>
                    <button id="add" disabled class="huge ui white button add-another">
                      Add Workout
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <div id="toast">
            Workout Added Successfully!
          </div>
          <script src="/api.js"></script>
          <script src="/index.js"></script>
        </body>
